{
    "name": "magarrent/laravel-currency-formatter",
    "description": "Tiny Laravel worldwide currency formatter",
    "type": "package",
    "license": "MIT",
    "keywords": [
        "laravel"
    ],
    "authors": [
        {
            "name": "Marc Garcia Torrent (Kodio Technologies)",
            "email": "magarrent@gmail.com"
        }
    ],
    "require": {
        "illuminate/support": "^7.0|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Magarrent\\LaravelCurrencyFormatter\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Magarrent\\LaravelCurrencyFormatter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Magarrent\\LaravelCurrencyFormatter\\LaravelCurrencyFormatterServiceProvider"
            ],
            "aliases": {
                "Currency": "Magarrent\\LaravelCurrencyFormatter\\Facades\\Currency"
            }
        }
    },
    "require-dev": {
        "orchestra/testbench": "^6.0"
    }
}
